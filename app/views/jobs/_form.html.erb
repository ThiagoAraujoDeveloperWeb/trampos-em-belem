<%= render 'home/nav_bar' %>
<br>
  <%= form_with(model: job, local: true) do |f| %>
    <% if job.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

        <ul>
          <% job.errors.full_messages.each do |message| %>
            <div class="alert alert-success" role="alert">
              <%= alert %>
            </div>
          <% end %>
        </ul>
      </div>
    <% end %>

<div class="container register">
  <div class="row">
    <div class="col-md-3 register-left">
      <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt=""/>
      <h3>Obtenha os melhores candidatos</h3>
      <p>Faça uma descrição que seja entendível e direta!</p>
      <!-- <input type="submit" name="" value="Login"/><br/> -->
    </div>
      <div class="col-md-9 register-right">
        <!-- <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
          <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Employee</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Hirer</a>
          </li>
        </ul> Aqui fica um botao para mudar de página -->
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <h3 class="register-heading">Faça o cadastro do trampo aqui!</h3>
              <div class="row register-form">
                <div class="col-md-8">
                  <div class="form-group">
                    <%= f.text_field :category, class: "form-control", placeholder: "Categoria - Ex.: Pedreiro" %>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <%= f.text_field :amount, class: "form-control", placeholder: "Quantidade de vagas - Ex.: 3" %>
                  </div>
                </div>
                <div class="col-md-12">

                  <div class="form-group">
                    <label>Descrição</label>
                    <%= f.text_area :description, class: "form-control tinymce", rows: 10, cols: 120, placeholder: "Escreva sobre a vaga..." %>
                  </div>

                  <div class="form-group">
                  <label>Pré Requisitos</label>
                    <%= f.text_field :pre_requirements, class: "form-control tinymce", rows: 10, cols: 120, placeholder: "Requisitos para a vaga..." %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :address, class: "form-control", placeholder: "Endereço..." %>
                  </div> 

                  <div class="form-group">
                    <%= f.text_area :more_details, class: "form-control", rows: 10, cols: 120, placeholder: "Fale mais sobre a vaga, ou esclareça algo..." %>
                  </div>
                <%= f.submit 'Publicar vaga', class: "btnRegister" %> 
                </div>
              </div>
            </div>
          </div>
      </div>
  </div>
</div>
<% end %>
<style>
  .register{
    background: -webkit-linear-gradient(left, #3233af, #343a40);
    max-width: 100%;
  }
  .register-left{
    text-align: center;
    color: #fff;
    margin-top: 4%;
  }
  .register-left input{
    border: none;
    border-radius: 1.5rem;
    padding: 2%;
    width: 60%;
