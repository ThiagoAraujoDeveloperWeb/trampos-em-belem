<%= render 'home/nav_bar' %>

<header class="bg-info py-5 mb-5">
  <div class="container h-100"><br>
    <div class="row h-100 align-items-center">
      <div class="col-lg-12">
        <h1 class="display-4 text-white mt-5 mb-2" style="padding-bottom: 16px; font-weight: bold; text-transform: uppercase;"><b><%= "Estamos com #{ Job.count } VAGA(S) EM ABERTO " %></b></h1>
        <p class="lead mb-5 text-white-50" style="font-size: 18px; font-weight: 500;">
          <%= 'Encontre sua vaga de maneira bem simples e eficiente!' %>
        </p>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row">
    <div class="login-form-1 col-md-12">
      <div class="container">
        <div class="row">
          <div class="col">
            <input class="form-control form-control-lg" type="text" placeholder="Palavra-Chave" aria-label="Search">
          </div>
          <div class="col">
            <select class="form-control form-control-lg">
              <option>Selecione a Categoria</option>
              <option>Programação</option>
              <option>Serviço Público</option>
              <option>Empregada Doméstica</option>
              <option>Carpinteiro(a)</option>
              <option>Garçon</option>
            </select>
          </div>
          <button class="btn btn-outline-danger my-2 my-sm-0" type="submit"><b>Buscar Vaga</b></button>
        </div>
      </div>
    </div>
  </div>
</div><br><br><br>

<% if notice %>
  <div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading">Warning!</h4>
    <p class="mb-0"><%= notice %></a>.</p>
  </div>
<% end %>

<div class="container">
    <div class="row">
      <div class="col-9">
        
      </div>
    <div class="list-group col-12">
      <% @jobs.each do |job| %>
        <div class="card w-110 border-job">
          <div class="card-body">
            <%= image_tag('jobs.png', style: 'width: 100px;') %> <b style="font-size: 30px;">
              <%= link_to job, class: 'noHover' do %>
                <%= job.category %>
              <% end %>
            </b>

            <p class="card-text card-subtitle mb-2 text-muted" style="margin-left: 110px;">
              <i class="fa fa-map-marker" aria-hidden="true"> <%= job.city %></i>

              <i class="fa fa-clock-o" style="margin-left: 50px;" aria-hidden="true"> <%= 'Puclicado dia ' + job.created_at.strftime("%d-%m-%y") %></i>
            </p>

            <div class="pull-right" style="margin-left: 50px; margin-top: -100px;">
              <a href="#" class="btn btn-primary pull-right">Me Candidatar</a>
            </div>
          </div>
        </div><br>
      <% end %>
    </div>
  </div>
</div>
</div>
<br>

<style>
.border-job:hover{
   border-color: #000;
   border size: 2px;
   box-shadow: 0 10px 10px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
}

.login-form-1 {
    padding: 5%;
    box-shadow: 0 8px 8px 0 rgba(0, 0, 0, 0.2), 0 9px 26px 0 rgba(0, 0, 0, 0.19);
    background: #fff;
    margin-top: -8%;
    border-radius: 2%;
    font-size: 20px;
    text-align: center;
    height: 150px;
}
.noHover{
  color: #000;
}
.noHover:hover{
    color: #000;
    text-decoration: none;
}
  .date{
    width: 170px;
    padding: 1%;
  }
  .badge-info{
    width: 200px;
    padding: 1%;
  }
  .paragrafo {
    overflow: hidden;
    text-overflow: ellipsis;
}
</style>