<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: 'form') do |f| %>
<%= render 'home/nav_bar' %><br><br><br><br>
<%#= render 'shared/nav_bar_admin' %>
<% if notice %>
  <div class="alert alert-dismissible alert-warning">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading">Warning!</h4>
    <p class="mb-0"><%= notice %></a>.</p>
  </div>
<% end %>

<div class="container bootstrap snippet">
  <div class="row">
    <div class="col-sm-10"><h1>Edite seu Perfil</h1></div>
    
  </div>
    <div class="row">
  		<div class="col-sm-2"><!--left col-->
              
      <div class="text-center">
        <% if !current_user.avatar.blank? %>
          <%= image_tag current_user.avatar, style: 'width: 170px;' %>
          <%= f.file_field :avatar %>
          <h6>Edite sua foto de perfil</h6>
        <% else %>
          <img src="http://ssl.gstatic.com/accounts/ui/avatar_2x.png" class="avatar img-circle img-thumbnail" alt="avatar">
          <%= f.file_field :avatar %>
          <h6>Adicione uma foto</h6>
        <% end %>
      </div><br>  
          
      <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
          Suas vagas
          <span class="badge badge-primary badge-pill"><%= count_my_jobs %></span>
        </li>
        
      </ul>      
    </div>

  <div class="tab-content col-sm-10">
    <div class="tab-pane active" id="home">
      <div class="container bootstrap snippet">
        <div class="row"> 
          <div class="col-sm-6">
            <label for="first_name"><h4>Primeiro Nome</h4></label>
            <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
          </div>
        
          <div class="col-sm-6">
            <label for="last_name"><h4>Ultimo Nome</h4></label>
            <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
          </div>
        </div><br>
        
        <div class="row">
          <div class="col-sm-6">
            <label for="phone"><h4>Telefone</h4></label>
            <%= f.text_field :phone, class: "form-control", autofocus: true, autocomplete: "phone" %>
          </div>
        
          <div class="col-sm-6">
            <label for="mobile"><h4>Celular</h4></label>
            <%= f.text_field :mobile_number, class: "form-control", autofocus: true, autocomplete: "mobile_number" %>
          </div>
        </div><br>

        <div class="row"> 
          <div class="col-sm-6">
            <label for="email"><h4>E-mail</h4></label>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="col-sm-6">
            <label for="email"><h4>Endereço</h4></label>
            <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
          </div>
        </div><br>

        <div class="row">
          <div class="col-sm-6">
            <label for="password"><h4>Nova senha</h4></label>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        
          <div class="col-sm-6">
            <label for="password2"><h4>Confirme a senha</h4></label>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password" %>
          </div>
        </div>
      </div>
        <div class="col-sm-12">
          <label for="email"><h4>Adicione a senha atual para confirmar as alterações</h4></label>
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
        </div>
        <div class="form-group">
          <div class="col-xs-12">
            <br>
            <%= f.submit "Atualizar", class: "btn btn-lg btn-success" %> 
          </div>
        </div>
      <% end %>
      <%= button_to "Quero cancelar minha conta", registration_path(resource_name), class: 'btn btn-lg btn-danger', data: { confirm: "Égua, tem certeza?" }, method: :delete %></p>
      
    </div>    
  </div><!--/tab-pane-->
